<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <View
            android:id="@+id/blankView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/theme_color"/>

        <RelativeLayout
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/blankView"
            android:background="@color/theme_color">

            <ImageView
                android:id="@+id/main_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/setting" />

            <ImageView
                android:id="@+id/main_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/transfer" />

            <AutoCompleteTextView
                android:id="@+id/main_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/main_transfer"
                android:layout_toRightOf="@id/main_setting"
                android:background="@drawable/bg_main_search"
                android:hint="快速查找文件"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/main_transfer_list"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/corners_bg_button"
            android:text="传输列表"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/main_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/main_title"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_photo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:text="图片"
                android:textColor="@color/theme_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/main_doc"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:text="文档"
                android:textColor="#9f9f9f"
                android:textSize="15sp" />

            <Button
                android:id="@+id/main_vedio"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:text="视频"
                android:textColor="#9f9f9f"
                android:textSize="15sp" />

            <Button
                android:id="@+id/main_music"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:text="音乐"
                android:textColor="#9f9f9f"
                android:textSize="15sp" />

            <Button
                android:id="@+id/main_other"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:text="其他"
                android:textColor="#9f9f9f"
                android:textSize="15sp" />

        </LinearLayout>

        <com.tf.transfer.ui.swipemenulistview.SwipeMenuListView
            android:id="@+id/main_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/main_transfer_list"
            android:layout_below="@id/main_button"
            android:layout_marginBottom="20dp"
            android:divider="#cbcaca"
            android:dividerHeight="0.1dp" />

    </RelativeLayout>

    <include
        layout="@layout/slide_menu"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right" />

</android.support.v4.widget.DrawerLayout>